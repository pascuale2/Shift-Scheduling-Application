<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Availability"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/openRadioButton"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/hot_pink_corner"
        android:text="Open/Mornings"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/closingRadioButton"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/orange_corner"
        android:text="Evenings/Closing"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/alldayRadioButton"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/btn_bg_logout"
        android:text="All day Availability"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/cannotRadioButton"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_bg"
        android:text="Cannot Work     "
        android:layout_margin="2dp"/>
</LinearLayout>